@using Utilities
@{
    /**/

    ViewBag.Title = "Index";
}
<div class="page-wrapper">
    <!-- Page-header start -->
    <div class="page-header">
        <div class="page-header-title">
            <h4>Quản lý Quyền</h4>
        </div>
        <div class="page-header-breadcrumb">
            <ul class="breadcrumb-title">
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Index","DashBoard")">
                        <i class="icofont icofont-home"></i>
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Index","AspNetRoles")">Danh sách</a>
                </li>
            </ul>
        </div>
    </div>
    <!-- Page-header end -->
    <!-- Page-body start -->
    <div class="page-body">
        <div class="row">
            <div class="col-sm-12">
                <!-- Ajax data source (Arrays) table start -->
                <div class="card">
                    <div class="card-header">
                        <div class="mt-1">
                            <div class="btn-group " onclick="showModal('@Url.Action("Create", "AspNetRoles")')" role="group" data-toggle="tooltip" data-placement="top" title="Thêm mới" data-original-title=".btn-xlg"> <button type="button" class="btn btn-primary waves-effect waves-light"><i class="ti-plus"></i> Thêm mới</button> </div>
                        </div>
                        <div class="mt-2">
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="input-group input-group-dropdown">
                                        @Html.TextBox("keysearch", "", new { @class = "form-control", @placeholder = "Nhập từ khóa cần tìm ..." })
                                        <div class="input-group-btn">
                                            <button type="submit" class="btn btn-inverse" onclick="onSearch()">
                                                Tìm kiếm
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-header-right">
                            <i class="icofont icofont-rounded-down"></i>
                            <i class="icofont icofont-refresh"></i>
                            <i class="icofont icofont-close-circled"></i>
                        </div>
                    </div>
                    <div class="card-block">
                        <div class="table-responsive dt-responsive">
                            <table id="dt-ajax-array" class="table table-striped table-bordered nowrap">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Tên Quyền</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>Id</th>
                                        <th>Tên Quyền</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- Ajax data source (Arrays) table end -->
            </div>
        </div>
    </div>
    <!-- Page-body end -->
</div>
@section scripts {
    <script>
        $(document).ready(function () {
            var oTable = $("#dt-ajax-array").dataTable({
                "bStateSave": false,
                "searching": false,
                "bSort": false,
                "sPaginationType": "full_numbers",
                "serverSide": true,
                "sServerMethod": "POST",
                "sAjaxSource": "@Url.Action("AjaxLoadList", "AspNetRoles")",
                "iDisplayLength": 50,
                "order": [[1, "asc"]],
                "columnDefs": [
                    { "width": "220px", "targets": 0 }
                ],
                "lengthChange": false,
                "fnServerParams": function (aoData) {
                    aoData.push(
                        { "name": "keysearch", "value": $("#keysearch").val() },
                        { "name": "status", "value": $("#ddl-custom").find("button").attr("data-status") }
                    );
                },
                "aoColumns": [
                    { "mData": "Id" },
                    { "mData": "Name" }
                ],
                "oLanguage": Resource.DataTableVnLang,
            });
        });
    </script>
}
