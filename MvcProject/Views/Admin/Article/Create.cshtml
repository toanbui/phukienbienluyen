@model Entities.Param.ArticleParam
@using Entities.Entities
@using Utilities
@{
    ViewBag.Title = "";
    ViewBag.Description = "";
    IEnumerable<TagEntity> Tags = ViewBag.Tags as IEnumerable<TagEntity>;
}
<script src="~/Scripts/Admin/inputmask.js"></script>
<script src="~/Scripts/Admin/jquery.inputmask.js"></script>
<script src="~/Scripts/Admin/form-mask.js"></script>
<script src="~/Scripts/Admin/createInit.js"></script>

<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Thông tin</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        @using (Html.BeginForm("Create", "Article", FormMethod.Post, new { @class = "form-horizontal", @data_parsley_type = "", id = "frCreate", @role = "form", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x => x.Article.Id)
            @Html.HiddenFor(x => x.Article.Created)
            @Html.HiddenFor(x => x.Article.CreatedBy)
            @Html.HiddenFor(x => x.Article.Url)
            @Html.HiddenFor(x => x.Article.NewsId)

        <div class="modal-body p-b-0">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Tiêu đề</label>
                <div class="col-sm-10 "> @Html.TextBoxFor(x => x.Article.Title, new { @class = "col-xs-12 col-sm-12 form-control", @placeholder = "" }) </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Ảnh</label>
                <div class="col-sm-10">
                    <input type="file" id="AvatarInput" name="AvatarInput" class="actFile form-control" />
                    @if (!string.IsNullOrEmpty(Model.Article.Avatar))
                    {
                        <img src="@Model.Article.Avatar.ChangeThumbSize(100,100)" />
                    }
                    @Html.HiddenFor(x => x.Article.Avatar)
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Mô tả</label>
                <div class="col-sm-10 "> @Html.TextBoxFor(x => x.Article.Sapo, new { @class = "col-xs-12 col-sm-12 form-control", @placeholder = "" }) </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Body</label>
                <div class="col-sm-10 "> @Html.TextAreaFor(x => x.Article.Body, new { @class = "col-xs-12 col-sm-12 form-control ckeditor", @placeholder = "" }) </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Tác giả</label>
                <div class="col-sm-10 "> @Html.TextBoxFor(x => x.Article.Author, new { @class = "col-xs-12 col-sm-12 form-control", @placeholder = "" }) </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Ẩn</label>
                <div class="col-sm-10 border-checkbox-section">
                    <div class="border-checkbox-group border-checkbox-group-primary"> @Html.CheckBox("Article.Invisible", Model.Article.Invisible == true, new { @class = "border-checkbox" }) <label class="border-checkbox-label" for="Article_Invisible">(Tích ẩn nếu chỉ muốn lấy link)</label></div>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Tag bài viết</label>
                <div class="col-sm-10 ">
                    @*data-* là các thuộc tính động cho action Delete Add Properties*@
                    <select class="col-sm-12" data-controller="Article" data-delete="DeleteTag" data-add="AddTag" data-id="@Model.Article.NewsId" data-selected="@(Json.Encode(Model.TagInNewsIds))" data-create="@ViewBag.Create" data-hdinput="hdTag" data-placeholder="Chọn thuộc tính" init-select2="true" multiple="multiple">
                        @if (Tags != null && Tags.Any())
                        {
                            foreach (var tag in Tags)
                            {
                                <option value="@tag.Id">@tag.Name</option>
                            }
                        }
                    </select>

                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Trạng thái</label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(x => x.Article.Status, ViewBag.Status as IEnumerable
                    <SelectListItem>
                    , new { @class = "form-control", @placeholder = "" , init_select2 = "true", data_selected = Model.Article.Status, data_placeholder = "Chọn trạng thái" })
                </div>
            </div>
        </div>
            <div class="modal-footer">
                <button type="button" onclick="sendCreateFormData('@Url.Action("Create", "Article")')" class="btn btn-primary">Lưu</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Hủy</button>
            </div>
        }
    </div>
</div>
