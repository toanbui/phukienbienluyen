@model Entities.Param.UserInLiveChatParam
@using Entities.Entities
@{
    ViewBag.Title = "";
    ViewBag.Description = "";
}
<script src="~/Scripts/Admin/inputmask.js"></script>
<script src="~/Scripts/Admin/jquery.inputmask.js"></script>
<script src="~/Scripts/Admin/form-mask.js"></script>
<script src="~/Scripts/Admin/createInit.js"></script>

<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Thông tin</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        @using (Html.BeginForm("Create", "UserInLiveChat", FormMethod.Post, new { @class = "form-horizontal", @data_parsley_type = "", id = "frCreate", @role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x => x.UserInLiveChat.Id)

        <div class="modal-body p-b-0">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Người dùng</label>
                <div class="col-sm-10 ">
                    @Html.DropDownListFor(x => x.UserInLiveChat.UserId, (ViewBag.Users as IEnumerable<AspNetUsersEntity>).Select(n => new SelectListItem { Selected = n.Id == Model.UserInLiveChat.UserId, Text = n.Name, Value = n.Id.ToString() }), new { @class = "col-xs-12 col-sm-12 form-control", @placeholder = "", @Required = "Required", init_select2 = "true", data_selected = Model.UserInLiveChat.UserId, data_placeholder = "Chọn người dùng" })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Mô tả</label>
                <div class="col-sm-10 "> @Html.TextBoxFor(x => x.UserInLiveChat.About, new { @class = "col-xs-12 col-sm-12 form-control", @placeholder = "" }) </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Thứ tự</label>
                <div class="col-sm-10 "> @Html.TextBoxFor(x => x.UserInLiveChat.Order, new { @class = "col-xs-12 col-sm-12 form-control autonumber int", @placeholder = "" }) </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Trạng thái</label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(x => x.UserInLiveChat.Status, ViewBag.Status as IEnumerable
                    <SelectListItem>
                    , new { @class = "form-control", @placeholder = "" , init_select2 = "true", data_selected = Model.UserInLiveChat.Status, data_placeholder = "Chọn trạng thái" })
                </div>
            </div>
        </div>
            <div class="modal-footer">
                <button type="button" onclick="sendCreate('@Url.Action("Create", "UserInLiveChat")')" class="btn btn-primary">Lưu</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Hủy</button>
            </div>
        }
    </div>
</div>
